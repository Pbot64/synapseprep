{
  "version": 2,
  "builds": [
    { "src": "/client/package.json", "use": "@now/static-build" },
    {
      "src": "/server/lamdas/**/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/server/lamdas/test.js"
    },
    {
      "src": "/api/users/login",
      "dest": "/server/lamdas/login.js"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/client/static/$1"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/client/index.html"
    },
    {
      "src": "/client/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/client/asset-manifest.json",
      "dest": "/asset-manifest.json"
    },
    {
      "src": "/client/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/client/precache-manifest.(.*)",
      "dest": "/precache-manifest.$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-atlas-uri",
    "SECRET_OR_KEY": "@secret-or-key",
    "EMAIL_PASSWORD": "@email-password"
  }
}
