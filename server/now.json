{
  "version": 2,
  "builds": [
    {
      "src": "./lamdas/**/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/lamdas/test.js"
    },
    {
      "src": "/api/users/login",
      "dest": "/lamdas/login.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-atlas-uri",
    "SECRET_OR_KEY": "@secret-or-key",
    "EMAIL_PASSWORD": "@email-password"
  }
}
